{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "elliptic": ["typings/elliptic"]
        },
        "typeRoots": ["./node_modules/@types", "./typings"]
    },
    "include": [
        "src/**/*",
        "./*",
        "typings/**/*"
    ],
    "exclude": ["typings/elliptic/*"]
}